<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_titulo_nf"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:hint="Título" />
    <EditText
        android:id="@+id/et_titulo_nf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_titulo_nf"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_codigo_nf"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_titulo_nf"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:hint="Código" />
    <EditText
        android:id="@+id/et_codigo_nf"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_titulo_nf"
        android:layout_toRightOf="@+id/tv_codigo_nf"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/tv_dataemprestimo_nf"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_codigo_nf"
        android:textSize="18dp"
        android:layout_marginTop="60dp"
        android:hint="Data Empréstimo" />
    <EditText
        android:id="@+id/et_dataemprestimo_nf"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_codigo_nf"
        android:layout_toRightOf="@+id/tv_dataemprestimo_nf"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/tv_datadevolucao_nf"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_dataemprestimo_nf"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:hint="Data Devolução" />
    <EditText
        android:id="@+id/et_datadevolucao_nf"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_dataemprestimo_nf"
        android:layout_toRightOf="@+id/tv_datadevolucao_nf"
        android:layout_marginTop="60dp"/>
    <Button
        android:id="@+id/bt_confirmar_nf"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tv_datadevolucao_nf" />

</RelativeLayout>