<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_ddd_funcionario"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="DDD" />
    <EditText
        android:id="@+id/et_telefone_funcionario"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/et_ddd_funcionario"
        android:hint="Telefone" />
    <EditText
        android:id="@+id/et_operadora_funcionario"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/et_ddd_funcionario"
        android:hint="Operadora" />
    <EditText
        android:id="@+id/et_nacionalidade_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_operadora_funcionario"
        android:layout_marginTop="16dp"
        android:hint="Nacionalidade" />
    <EditText
        android:id="@+id/et_naturalidade_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nacionalidade_funcionario"
        android:layout_marginTop="16dp"
        android:hint="Naturalidade" />
    <TextView
        android:id="@+id/tv_senha_funcionario"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:textSize="19dp"
        android:layout_below="@+id/et_naturalidade_funcionario"
        android:layout_marginTop="18dp"
        android:text="Senha" />
    <EditText
        android:id="@+id/et_senha_funcionario"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_naturalidade_funcionario"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:id="@+id/et_id_funcionario"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_senha_funcionario"
        android:layout_marginTop="16dp"
        android:hint="ID" />
    <EditText
        android:id="@+id/et_dn_funcionario"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_senha_funcionario"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/et_id_funcionario"
        android:hint="Data Nascimento" />
    <EditText
        android:id="@+id/et_cargo_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_id_funcionario"
        android:layout_marginTop="16dp"
        android:hint="Cargo" />
    <EditText
        android:id="@+id/et_salario_funcionario"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cargo_funcionario"
        android:layout_marginTop="16dp"
        android:hint="SalÃ¡rio" />
    <Button
        android:id="@+id/bt_cadastrar_funcionario"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Cadastrar"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/et_salario_funcionario" />

</RelativeLayout>
