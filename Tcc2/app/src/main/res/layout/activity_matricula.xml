<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_matricula_matricula"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="Matrícula" />
    <EditText
        android:id="@+id/et_matricula_matricula"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_matricula_matricula"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_matricula_cpf"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_matricula_matricula"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="CPF" />
    <EditText
        android:id="@+id/et_matricula_cpf"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_matricula_matricula"
        android:layout_toRightOf="@+id/tv_matricula_cpf"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_matricula_di"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_matricula_cpf"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="Data início" />
    <EditText
        android:id="@+id/et_matricula_di"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_matricula_cpf"
        android:layout_toRightOf="@+id/tv_matricula_di"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_matricula_df"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_matricula_di"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="Data Fim" />
    <EditText
        android:id="@+id/et_matricula_df"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_matricula_di"
        android:layout_toRightOf="@+id/tv_matricula_df"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/bt_escolher_disciplinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_matricula_df"
        android:layout_marginTop="30dp"
        android:text="Selecionar Disciplinas" />




</RelativeLayout>