<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/menu_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/books"
        android:text="PalmSchool"
        android:textSize="34dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre: O PalmSchool se trata de um ambiente para dispositivos móveis, possibilitando aos alunos, professores e funcionários da escola, o acesso  as informações e a automatização de determinados processos."
        android:layout_below="@+id/menu_titulo"
        android:textSize="21dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>