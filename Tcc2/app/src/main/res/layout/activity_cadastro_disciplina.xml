<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alessandro.tcc.CadastroDisciplinaActivity">

    <Button
        android:id="@+id/bt_cadastrar_disciplina"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/et_nome_disciplina"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/et_codigo_disciplina"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName|number"
        android:text="Código"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/et_ch_disciplina"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Carga Horária"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="180dp" />
</android.support.constraint.ConstraintLayout>
