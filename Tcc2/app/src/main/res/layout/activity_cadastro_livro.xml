<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_titulo_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Título" />
    <EditText
        android:id="@+id/et_autor_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_titulo_livro"
        android:layout_marginTop="16dp"
        android:hint="Autor" />
    <EditText
        android:id="@+id/et_editora_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_autor_livro"
        android:layout_marginTop="16dp"
        android:hint="Editora" />
    <EditText
        android:id="@+id/et_edicao_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_editora_livro"
        android:layout_marginTop="16dp"
        android:hint="Edição" />
    <EditText
        android:id="@+id/et_area_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_edicao_livro"
        android:layout_marginTop="16dp"
        android:hint="Área" />
    <EditText
        android:id="@+id/et_dp_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_area_livro"
        android:layout_marginTop="16dp"
        android:hint="Data de Publicação" />
    <EditText
        android:id="@+id/et_idioma_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_dp_livro"
        android:layout_marginTop="16dp"
        android:hint="Idioma" />
    <EditText
        android:id="@+id/et_id_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_idioma_livro"
        android:layout_marginTop="16dp"
        android:hint="ID" />
    <Button
        android:id="@+id/bt_cadastrar_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Cadastrar"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/et_id_livro" />

</RelativeLayout>
