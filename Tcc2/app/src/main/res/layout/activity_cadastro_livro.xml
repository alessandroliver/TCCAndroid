<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alessandro.tcc.CadastroLivroActivity">

    <Button
        android:id="@+id/bt_cadastrar_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="453dp" />

    <EditText
        android:id="@+id/et_titulo_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Título"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/et_autor_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Autor"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/et_editora_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Editora"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="118dp" />

    <EditText
        android:id="@+id/et_edicao_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Edição"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="166dp" />

    <EditText
        android:id="@+id/et_area_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Área"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/et_dp_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="Data Publicação"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="270dp" />

    <EditText
        android:id="@+id/et_indioma_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Indioma"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="318dp" />

    <EditText
        android:id="@+id/et_id_livro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|number"
        android:text="ID"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="374dp" />

</android.support.constraint.ConstraintLayout>
